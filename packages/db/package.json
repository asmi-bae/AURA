{
  "name": "@aura/db",
  "version": "0.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "check-types": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "db:migrate": "ts-node --esm src/scripts/run-migrations.ts",
    "db:revert": "ts-node --esm src/scripts/revert-migrations.ts",
    "db:seed": "ts-node --esm src/seeds/seed-data.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2",
    "sqlite3": "^5.1.7",
    "pg": "^8.13.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@types/node": "^20.12.7",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
