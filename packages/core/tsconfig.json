{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["ES2015"],
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noErrorTruncation": false,
    "declaration": true,
    "declarationMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@aura/db": ["../db/dist"],
      "@aura/plugins": ["../plugins/dist"],
      "@aura/*": ["../*/dist"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "../db/src", "../db", "**/node_modules/**", "**/.pnpm/**"]
}
