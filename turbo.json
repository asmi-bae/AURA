{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": [
        ".env*",
        "**/*.{js,jsx,ts,tsx}",
        "**/.eslintrc*",
        "**/eslint.config.{js,cjs,mjs}"
      ],
      "outputs": []
    },
    "check-types": {
      "dependsOn": ["^check-types"],
      "inputs": [
        ".env*",
        "**/*.{ts,tsx}",
        "**/tsconfig.json"
      ],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
